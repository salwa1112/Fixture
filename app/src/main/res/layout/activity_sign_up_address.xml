<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpAddressActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/gotham_black"
        android:text="F I X T U R E"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/et_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="40dp"
        android:text="Enter current address"
        android:background="@drawable/edit_email_location"
        android:fontFamily="@font/gotham_book"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

       <EditText
        android:id="@+id/et_apartment_house_number"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/gotham_book"
        android:hint="Apartment/House no."
        android:paddingStart="14dp"
        android:textColorHint="#3337474F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/et_street_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/gotham_book"
        android:hint="Street Name"
        android:paddingStart="14dp"
        android:textColorHint="#3337474F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_apartment_house_number"
        app:layout_constraintStart_toStartOf="@+id/et_apartment_house_number"
        app:layout_constraintTop_toBottomOf="@+id/et_apartment_house_number" />

    <EditText
        android:id="@+id/et_city"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/gotham_book"
        android:hint="City"
        android:paddingStart="14dp"
        android:textColorHint="#3337474F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_street_name"
        app:layout_constraintStart_toStartOf="@+id/et_street_name"
        app:layout_constraintTop_toBottomOf="@+id/et_street_name" />

    <EditText
        android:id="@+id/et_province"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/gotham_book"
        android:hint="Province"
        android:paddingStart="14dp"
        android:textColorHint="#3337474F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_city"
        app:layout_constraintStart_toStartOf="@+id/et_city"
        app:layout_constraintTop_toBottomOf="@+id/et_city" />

    <EditText
        android:id="@+id/et_zip_code"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/gotham_book"
        android:hint="Postal Code"
        android:paddingStart="14dp"
        android:textColorHint="#3337474F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_province"
        app:layout_constraintStart_toStartOf="@+id/et_province"
        app:layout_constraintTop_toBottomOf="@+id/et_province" />

    <Button
        android:id="@+id/btn_sign_up_address_continue"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="26dp"
        android:background="#37474F"
        android:fontFamily="@font/gotham_bold"
        android:text="CONTINUE"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_zip_code" />

</androidx.constraintlayout.widget.ConstraintLayout>